@model IEnumerable<RTTClientManagementMVC.Models.ClientModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Client", "Create")
</p>
<p class="navbar-text navbar-right">
    @Html.ActionLink("Save To File", "SaveToFile")
</p>
<table class="table">
    <tr>
        <th>Client ID</th>
        <th>Client Name</th>
        <th>Gender</th><th>Cell Number</th>
        <th>Work Tell</th>
        <th>Residential Address</th>
        <th>Work Address</th>
        <th>Postal Address</th>
        <th>Actions</th>
    </tr>

@foreach (System.Data.DataRow item in ViewBag.ClientList.Rows) {
    <tr>
        <td>
            @item["clientId"].ToString()
        </td>
