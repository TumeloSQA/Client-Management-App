        </td>
        <td>
            @item["gender"].ToString()
        </td>
        <td>
            @item["cellNumber"].ToString()
        </td>
        <td>
            @item["workTel"].ToString()
        </td>
        <td>
            @item["resAddress"].ToString()
        </td>
        <td>
            @item["workAddress"].ToString()
        </td>
        <td>
            @item["posAddress"].ToString()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
